@model IT___Telefaune.Models.SiteModel

@if (ViewBag.sessionv != null)
{
    <form method="post" asp-action="Update">
        <input asp-for="SiteId" hidden />
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-black-50 pl-3">Modifier le site</h2>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-group row">
                        <div class="col">
                            <label asp-for="NomSite"> Nom:</label>
                            <input asp-for="NomSite" class="form-control" />
                            <span asp-validation-for="NomSite" class="text-danger"></span>
                        </div>
                        <div class="col">
                            <label asp-for="Ville"> Ville :</label>
                            <input asp-for="Ville" class="form-control" />
                            <span asp-validation-for="Ville" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-12">
                            @Html.DropDownListFor(m => m.TypeServiceWrong,
                                new SelectList(Enum.GetValues(typeof(ServiceList))),
                                "Select Service")
                        </div>
                    </div>
                    <div class="form-group row ">
                        <div class="col-8 row">
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="Enregistrer" />
                            </div>
                            <div class="col">
                                <a class="btn btn-dark" asp-action="Index">Retour</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}
else
{
    <div class="card mt-5 p-5">
        <h1 class="text-center text-danger m-auto">Vous n'êtes pas autorisé à accéder à cette page.</h1>
    </div>
}
