@model IT___Telefaune.Models.SiteModel

<form method="post" asp-action="DeletePost">
    <input asp-for="SiteId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Etes-vous sûr de vouloir supprimer ce site?</h2>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col">
                        <label asp-for="Nom"> Nom:</label>
                        <input asp-for="Nom" disabled class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                    <div class="col">
                        <label asp-for="Ville"> Ville :</label>
                        <input asp-for="Ville" disabled class="form-control" />
                        <span asp-validation-for="Ville" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row ">
                    <div class="col-8 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Supprimer" />
                        </div>
                        <div class="col">
                            <a class="btn btn-dark" asp-action="Index">Retour</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

